    <li>
      <p class="event-time">11:00am</p><p class="event-title"><a href="#">Brunch</a></p>
    </li>
    <li>
      <p class="event-time">11:30am</p>
      <p class="event-title"><%= link_to "Why Work at a Startup?", page_path("what", :anchor => "why-work-at-a-startup") %></p>
