<div id="main-continue-top"></div>
<section id="main-continue">
  <div class="register-button bottom clearfix">
    <div class="hand left"></div>
    <h2><a href="#registration">register now</a></h2>
    <div class="hand right"></div>
  </div>

  <hr class="bottom"/>

  <%= render :partial => 'party' %>

  <hr class="top"/>
  <section id="startup-tables">
    <header id="startup-banner">
      <img src="/images/startup_tables.png" alt="Startup Tables" width="422" height="130" />
    </header>

    <section id="startup_tables_list">
      <% @startups.each_slice(2) do |startup_pair| %>
        <section class="row">
          <% startup_pair.each do |startup| %>
            <section class="company <%= cycle('first', '') %>">
              <h2><%= link_to startup.name, startup.url %></h2>
              <p><%= startup.description %></p>
            </section>
          <% end %>
        </section>
      <% end %>
    </section>
  </section>

  <hr class="bottom"/>

  <section id="registration">
    <%= render 'closed' %>
  </section>

  <hr class="alternate"/>

  <section id="attendees">
    <header>
      <h1>The Attendees</h1>
    </header>
    <h2 id="developer-title">developers</h2><h2 id="designer-title">designers</h2>
    <div id="developer-attendees" class="left">
      <ul>
        <% @developers.each do |developer| %>
          <li>
            <%= twitter_avatar developer.twitter, 48 %>
            <hgroup>
              <h3><%= developer.name %></h3>
              <h4><%= developer.school_name %></h4>
            </hgroup>
          </li>
        <% end %>
      </ul>
    </div>
    <div id="designer-attendees" class="right">
      <ul>
        <% @designers.each do |designer| %>
          <li>
            <%= twitter_avatar designer.twitter, 48 %>
            <hgroup>
              <h3><%= designer.name %></h3>
              <h4><%= designer.school_name %></h4>
            </hgroup>
          </li>
        <% end %>
      </ul>
    </div>
  </section>
</section>
